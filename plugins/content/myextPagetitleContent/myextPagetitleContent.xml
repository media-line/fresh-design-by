<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>plg_myextPagetitleContent</name>
	<creationDate>2013.11.17</creationDate>
    <author>Usov Dima</author>
    <authorUrl>http://myext.ru</authorUrl>
    <authorEmail>usovdm@gmail.com</authorEmail>
    <copyright>Copyright (C) 2012 usovdm</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPLv3</license>
    <version>1.1.3</version>
	<description><![CDATA[
		Add "Page title" field into com_content form.<br/><br/>For support of 3rd extensions write on support@myext.eu
	]]></description>
	<files>
		<filename plugin="myextPagetitleContent">myextPagetitleContent.php</filename>
	</files>
	<config>
        <fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" label="title" description="Name of option" size="50" default="Page title" />
			</fieldset>
        </fields>
    </config>
	<updateservers>
		<server type="extension" priority="1" name="myextPagetitleContent">http://myext.eu/updates/plg_content_myextPagetitleContent.xml</server>
	</updateservers>
</extension>